<% layout('layouts/boilerPlate') %>
    <div class="row">
        <div class="col-6 offset-3 mb-3">
            <form action="/allOpports" method="post" novalidate class="validated-form">
                <div class="mb-2">
                    <label class="form-label" for="cName">Company Name</label>
                    <input class="form-control" type="text" id="cName" name="cName" placeholder="" required>

                </div>
                <div class="mb-2">
                    <label class="form-label" for="aboutC">About Company</label>
                    <input class="form-control" type="text" id="aboutC" name="aboutC" placeholder="">
                </div>
                <div class="mb-2">
                    <label class="form-label" for="role">Job Role</label>
                    <input class="form-control" type="text" id="role" name="role" placeholder="" required>

                </div>
                <div class="mb-2">
                    <label class="form-label" for="skills">Skills requirements</label>
                    <input class="form-control" type="text" id="skills" name="skills" placeholder="" required>

                </div>
                <div class="mb-2">
                    <label class="form-label" for="experience">Experience(required in years)</label>
                    <select class="form-control" name="experience" id="experience" required>
                        <option value="Fresher">Fresher</option>
                        <option value="0-1"> 0-1 </option>
                        <option value="1-2"> 1-2 </option>
                        <option value="2-5"> 2-5 </option>
                        <option value="5+">5+</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="lastDate">Last Date to apply</label>
                    <input type="date" name="lastDate" id="lastDate" class="form-control">
                </div>

                <div class="mb-2">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="textarea" name="description" id="description"
                        placeholder="Description" required></textarea>

                </div>
                <button class="btn btn-success" type="submit">Submit</button>
                <button class="btn btn-warning" type="reset" value="Reset">Reset</button>

                <a class="btn btn-danger" href="/allOpports">Cancel</a>

            </form>

        </div>
    </div>